    <body>
        <h1>Guees the Number</h1>
        <input id="in">
        <button onclick="check()">check</button>
        <p>You are Right/ Wrong</p>
        <p id="right"></p>
        <p id="wrong"></p>

        <script>
            var num=document.getElementById("in");
            var ran=Math.ceil(Math.random()*10);
         
            var win=document.getElementById("right")
            var loss=document.getElementById("wrong")
        function check(){
            invalue=num.value;
            if(invalue==ran){
                win.textContent="YOU GUEES is CORRECT  YOU Win"
            
            }
            else{
                loss.textContent="You guees is Wrong you LOSS \n system no is:"+" "+ran
                
            }

        }
        </script>

