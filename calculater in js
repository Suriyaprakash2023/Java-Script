            <input type="button" value="5" onclick="calculater.display.value=calculater.display.value +'5'"> &nbsp;&nbsp;&nbsp;
            <input type="button" value="6" onclick="calculater.display.value=calculater.display.value +'6'"> &nbsp;&nbsp;&nbsp;&nbsp;
            <input type="button" value="-" onclick="calculater.display.value=calculater.display.value +'-'"> &nbsp;&nbsp;&nbsp;
